<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="faistforward" id="2" context="!cuba">
        <modifyDataType tableName="DYNAT_ATTR_VALUE" columnName="STRING_VALUE" newDataType="clob"/>
    </changeSet>
    <changeSet author="faistforward" id="3" context="!cuba">
        <createTable tableName="DYNAT_TEMPLATE">
            <!-- Primärschlüssel -->
            <column name="ID" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <!-- Optimistic Locking -->
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <!-- Audit-Spalten -->
            <column name="CREATE_TS" type="TIMESTAMP"/>
            <column name="CREATED_BY" type="VARCHAR(50)"/>
            <column name="UPDATE_TS" type="TIMESTAMP"/>
            <column name="UPDATED_BY" type="VARCHAR(50)"/>
            <column name="DELETE_TS" type="TIMESTAMP"/>
            <column name="DELETED_BY" type="VARCHAR(50)"/>
        </createTable>

    </changeSet>
    <changeSet id="4" author="faistforward">
        <addColumn tableName="DYNAT_CATEGORY_ATTR">
            <column name="CAT_GROUP" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="VISIBLE" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="WITH_RATE" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="WITH_NOTE" type="boolean">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <modifyDataType tableName="DYNAT_CATEGORY_ATTR" columnName="ENUMERATION" newDataType="CLOB"/>
    </changeSet>
</databaseChangeLog>
